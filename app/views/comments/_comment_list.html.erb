<tr>

  <td><%= comment.description %></td>
  <td><%= truncate(comment.content, :length => 80) %></td>
  <td><%= comment.user.name %></td>
   <td><%= comment.comment_state %></td>
   <td><%=I18n.l(comment.created_at) %></td>
  <td><%= link_to 'Voir', comment %></td>
  <td><%= link_to 'Modifier', edit_comment_path(comment) unless correct_current_user(comment)==false || comment.comment_state !='unread' %>
  
</tr>