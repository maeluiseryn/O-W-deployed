<div>
<%= form_for @project do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> Erreurs empèche ce Projet d'être sauvé:</h2>

      <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

 <div class="field">
    <%= f.label :project_price,'Type de projet' %><br />
    <%= f.text_field :project_price %>
  </div>

   <div class="span-15">
     <%= f.label :add_remark,'Remarque particuliere' %><br>
     <%=f.text_area :add_remark %>
   </div>
    <div class="actions span-15">
    <%= f.submit %>
  </div>

<% end %>
</div>