<% form_for @support, :url => { :action => "create" }, :html => { :method => :post } do |f| %>
	 <% if current_user.nil?%>
	   <p>
	    <%= f.label "Nom" %>
	 <br/>

      <%= f.text_field :sender_name %>
	  </p>
	  <p>
	    <%= f.label "Email" %>
	  <br/>
	    <%= f.text_field :email %>
	  </p>
      <%else%>
       <%= f.hidden_field :sender_name, :value =>current_user.name %>
       <%= f.hidden_field :email, :value =>current_user.email %>
      <% end %>
	  <p>
	    <%= f.label "Type" %>
	  <br/>
	    <%= f.select :support_type, options_for_select(["Bug", "Demande", "IdÃ©e"]) %>
	  </p>
	  <p>
	    <%= f.label "Details" %>
        <br/>
	    <%= f.text_area :content %>
	  </p>
	  <p>
	    <%= f.submit "Envoyer" %>
	  </p>
	<% end %>